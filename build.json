{
    "libs": {
        "@angular/core": {},
        "@angular/common": {},
        "@angular/platform-browser": {},
        "@angular/forms": {},
        "@angular/router": {},
        "rxjs": { "sourceMaps": true},
        "rxjs/operators": {"sourceMaps": true},
        "app/common": {
            "entry": "app/common/index.js",
            "sourceMaps": true
        }
    },
    "importAlias": {
        "app/common": "app/common"
    },
    "ngcOut": "out-tsc/app", 
    "env": {
        "dev" : {
            "dist": "dist-rollup",
            "uglify": false,
            "hash": true,
            "indexHtml": true,
            "serve": true      
        },
        "prod" : {
            "dist": "dist-rollup-prod",
            "uglify": true,
            "hash": true,
            "indexHtml": true
        } 
    }
}